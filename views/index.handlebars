<div id="main">
    <div class="header">
        <h1></h1>
        <img src="assets/img/logo.png" alt="">
        <h2>The <em>fun</em> burger simulator</h2>
    </div>

<div class="content">
  <div class="pure-g">
    <div class="pure-u-11-24">
      <h3 class="listheader">New Burgers</h3>

      <div class="burgerlist">

        {{#each burgerlist}}
          {{#unless this.eaten}}
        <div class="burger pure-g">
          <div class="pure-u-1-2">
            <h3>{{this.burger_name}}</h3>
          </div>
          <div class="pure-u-1-2">
            <form class="" action="/api/eat/{{this.id}}?_method=PUT" method="post">
              <button class="pure-button" type="submit">
                <img class="eat-icon" src="/assets/img/eat-icon.svg"></img>
              </button>
            </form>
          </div>
        </div>
          {{/unless}}
        {{/each}}

      </div>
    </div>
    <div class="pure-u-1-24">

    </div>
    <div class="pure-u-11-24">
      <h3 class="listheader">Eaten Burgers</h3>

      <div class="burgerlist">
        {{#each burgerlist}}
        {{#if this.eaten}}

        <div class="burger pure-g">
          <div class="pure-u-1-2">
            <h3>{{this.burger_name}}</h3>
          </div>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
  <h2 class="content-subhead">Add a burger:</h2>
  <form class="pure-form" action="/api/new/" method="POST">
    <!-- <fieldset> -->
        <input type="input" name="name">
        <button type="submit" class="pure-button pure-button-primary">Add it!</button>
    <!-- </fieldset> -->
</form>
</div>



</div>
